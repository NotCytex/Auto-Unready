{
    "name": "Auto Unready",
    "version": "2.0",
    "manifest_version": 3,
    "description": "Automatically 'Unready' on Finesse when walkup is accepted.",
    "icons":{
        "32": "icon.png"
    },
    "permissions": [
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://fairfaxmedia.service-now.com/*",
        "https://*.nna.net/*"
    ],
    "background":{
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
          "matches": ["https://fairfaxmedia.service-now.com/*"],
          "js": ["toast.js", "content-snow.js"]
        },
        {
          "matches": ["https://*.nna.net/*"],
          "js": ["toast.js", "content-finesse.js"]
        }
    ],
    "action": {
        "default_popup": "index.html"
    }
}
  